<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧 
  </div>
  <div class="panel-body">
    <p>寄せられたメッセージはこちら！</p>
  </div>
  
 <div class="container">
   <div class="table-responsive">
     <!-- Table -->
     <table class="table">
      <thead>
      <tr>
        <th>#</th>
        <th>名前</th>
        <th>年齢</th>
        <th>内容</th>
        <th></th> 
      </tr>
     </thead>
  
     <tbody>
     　<%#(配列).each do |(配列の要素)|%>
     　<%#(配列の要素に対して行う処理)%>
       <%#end%>
       <% @messages.each_with_index do |message, i| %>
       <tr>
         <th scope = "row"><%= i+1 %></td>
         <td><span class="label label-info"><%= message.name %></span></td>
         <td><%= message.age %></td>
         <td><%= message.body %></td>
         <td>
           <button type="button" class="btn btn-default">
             <%= link_to "edit" , edit_message_path(message) %>
           </button>
           <button type="button" class="btn btn-default">
             <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
            </button>
          </td>
        </tr>
       <%end %>
     </tbody>
    </table>
  </div>
</div>
</div>
</div>

<%#(ハッシュ).each do |(要素のキー), (要素の値)|%>
<%#  (要素に対してう処理)%>
<%#end%>
<%= form_for(@message, html: { class: "form-horizontal" }) do |f| %>

<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>

<% end %>
